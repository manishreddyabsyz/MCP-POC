{
  "openapi": "3.0.0",
  "info": {
    "title": "Salesforce Case Assistant API",
    "description": "API for querying Salesforce cases with natural language",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-deployment-url.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/query": {
      "post": {
        "summary": "Query Salesforce cases with natural language",
        "description": "Submit natural language queries to get case information, comments, history, and analysis from Salesforce",
        "operationId": "querySalesforce",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "Natural language query about Salesforce cases (e.g., 'Show me case 12345', 'List all in progress cases', 'Get comments for case 12345')"
                  },
                  "session_id": {
                    "type": "string",
                    "description": "Optional session identifier for maintaining conversation context",
                    "default": "default"
                  }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with case data or analysis",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Response type (case_data, search_results, clarification, etc.)"
                    },
                    "session_id": {
                      "type": "string",
                      "description": "Session identifier"
                    },
                    "message": {
                      "type": "string",
                      "description": "Human-readable response message"
                    },
                    "case_data": {
                      "type": "object",
                      "description": "Structured case information when available"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health/salesforce": {
      "get": {
        "summary": "Check Salesforce connection health",
        "description": "Verify that the Salesforce connection is working properly",
        "operationId": "checkSalesforceHealth",
        "responses": {
          "200": {
            "description": "Salesforce connection status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Connection status (healthy/unhealthy)"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status details"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}